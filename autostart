#!/bin/bash
# autostart

dir=~/.config/herbstluftwm/

sh $dir/change_background $dir/backgrounds
source ~/.colors

# starting to breakout the theme config vareables
font="terminus-10"
terminal="urxvt"
browser="chromium"


function hc() {
    herbstclient "$@"
}

hc lock
hc emit_hook reload

hc lock
hc detect_monitors


# remove all existing keybindings
hc keyunbind --all

# keybindings
Mod=Mod4
hc keybind Control-Alt-Delete quit
hc keybind $Mod-Control-r reload
hc keybind $Mod-w close_or_remove
hc keybind $Mod-Shift-Return spawn $terminal
hc keybind $Mod-Return spawn $terminal
hc keybind $Mod-d spawn dmenu_run -fn $font -nb $COLOR0 -sb $COLOR2 -sf "#000000"
hc keybind $Mod-0 spawn $dir/padding
hc keybind $Mod-m spawn $dir/cmus_controll.sh

# tags
TAG_NAMES=( z x c v b n m \, \. )
TAG_KEYS=( z x c v b n m comma period  )

hc set default_frame_layout 1
hc rename default "${TAG_NAMES[0]}" || true
for i in ${!TAG_NAMES[@]} ; do
    hc add "${TAG_NAMES[$i]}"
    key="${TAG_KEYS[$i]}"
    if ! [ -z "$key" ] ; then
        hc keybind "$Mod-$key" use "${TAG_NAMES[$i]}"
        hc keybind "$Mod-Alt-$key" move "${TAG_NAMES[$i]}"
        hc keybind "$Mod-Shift-$key" move "${TAG_NAMES[$i]}"
    fi
done

hc keybind $Mod-a use_previous

# layouting
hc keybind $Mod-r remove
hc keybind $Mod-space cycle_layout 1
hc keybind $Mod-u split vertical 0.5
hc keybind $Mod-o split horizontal 0.5
hc keybind $Mod-s floating toggle
hc keybind $Mod-f fullscreen toggle
hc keybind $Mod-p pseudotile toggle
hc keybind $Mod-i spawn $dir/sidebar.sh

# resizing
RESIZESTEP=0.05
hc keybind $Mod-Control-h resize left +$RESIZESTEP
hc keybind $Mod-Control-j resize down +$RESIZESTEP
hc keybind $Mod-Control-k resize up +$RESIZESTEP
hc keybind $Mod-Control-l resize right +$RESIZESTEP

# mouse
hc mousebind $Mod-Button1 move
hc mousebind $Mod-Button2 zoom
hc mousebind $Mod-Button3 resize

# focus
hc keybind $Mod-BackSpace   cycle_monitor
hc keybind $Mod-slash   cycle_monitor
hc keybind $Mod-Tab         cycle +1
hc keybind $Mod-Shift-Tab   cycle -1
hc keybind $Mod-h focus left
hc keybind $Mod-j focus down
hc keybind $Mod-k focus up
hc keybind $Mod-l focus right
hc keybind $Mod-Alt-h shift left
hc keybind $Mod-Shift-h shift left
hc keybind $Mod-Alt-j shift down
hc keybind $Mod-Shift-j shift down
hc keybind $Mod-Alt-k shift up
hc keybind $Mod-Shift-k shift up
hc keybind $Mod-Alt-l shift right
hc keybind $Mod-Shift-l shift right
hc keybind $Mod-Alt-i rotate
hc keybind $Mod-Shift-i rotate

# settings
hc set focus_follows_mouse 1
hc set raise_on_click 1
hc set raise_on_focus 0
hc set raise_on_focus_temporarily 0

# colors
hc set frame_border_width 0
hc set window_border_width 2
hc set window_border_active_color "$COLOR9"
hc set window_border_normal_color '#444444'
hc set frame_gap 4

hc set frame_bg_transparent 1
hc set frame_active_opacity 1
hc set frame_normal_opacity 1

# rules
hc unrule -F
#hc rule class=XTerm tag=3 # move all xterms to tag 3
hc rule focus=on # normally do focus new clients
# give focus to most common terminals
hc rule class~'(.*[Rr]xvt.*|.*[Tt]erm|Konsole)' focus=on
hc rule windowtype~'_NET_WM_WINDOW_TYPE_(DIALOG|UTILITY|SPLASH)' pseudotile=on
hc rule windowtype='_NET_WM_WINDOW_TYPE_DIALOG' focus=on
hc rule windowtype~'_NET_WM_WINDOW_TYPE_(NOTIFICATION|DOCK)' manage=off


hc unlock
hc unlock
# Bars
$dir/panel.sh &
killall stalonetray # don't do this
stalonetray --geometry 4x1-0+0 --grow-gravity NE --icon-gravity NE --icon-size 16 --max-geometry 4x1 -bg "$COLOR0" &
